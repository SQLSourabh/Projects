        <CollectionViewSource x:Key="actionStatusViewSource" Source="{Binding ActionStatus, Source={StaticResource docDBProjectDataSet}}"/>
        <CollectionViewSource x:Key="productInfoViewSource" Source="{Binding ProductInfo, Source={StaticResource docDBProjectDataSet}}"/>
        <CollectionViewSource x:Key="productInfo1ViewSource" Source="{Binding ProductInfo1, Source={StaticResource docDBProjectDataSet}}"/>
    </Window.Resources>
    <Grid Margin="23,0,18,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" BorderThickness="5" BorderBrush="#FFF9F2F2">
