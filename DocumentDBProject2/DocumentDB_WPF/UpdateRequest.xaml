        <Border Grid.Row="5" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestProduct" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0" Width="410" Height="34" MaxLines="1" Text=""/>
        </Border>
        <Border Grid.Row="6" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestCategory" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0" Width="410" Height="34" MaxLines="1" Text=""/>
        </Border>
        <Border Grid.Row="7" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestorAssignedTo" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0" Width="410" Height="34" MaxLines="1" Text=""/>
        </Border>
        <Border Grid.Row="13" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <ComboBox x:Name="cbActionState" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="410" IsEnabled="False">
                <ComboBoxItem Content="Pending Review" HorizontalAlignment="Left" Width="408" IsSelected="True"/>
                <ComboBoxItem Content="Pending Action" HorizontalAlignment="Left" Width="408"/>
                <ComboBoxItem Content="In Review" HorizontalAlignment="Left" Width="408"/>
                <ComboBoxItem Content="Declined" HorizontalAlignment="Left" Width="408"/>
                <ComboBoxItem Content="Completed" HorizontalAlignment="Left" Width="408"/>
            </ComboBox>
        </Border>
        <Border Grid.Row="8" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <RichTextBox x:Name="rtbServiceDescription" HorizontalAlignment="Left" VerticalAlignment="Top" Width="410" Height="135" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>
        <Border Grid.Row="14" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <RichTextBox x:Name="rtbActionComments" HorizontalAlignment="Left" VerticalAlignment="Top" Width="405" Height="80" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Actioner Comments"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>
        <Border Grid.Row="15" Grid.Column ="0" BorderThickness="5" BorderBrush="#FFF9F2F2" Grid.ColumnSpan="2" Margin="0" d:IsLocked="False">
            <Button Content="Update Request" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="Update_Request" Background="#FFDCC7C7" FontWeight="Bold" OpacityMask="Black"/>
