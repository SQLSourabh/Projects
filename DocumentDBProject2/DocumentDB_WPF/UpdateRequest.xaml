        </Border>
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestorName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" Width="410" Height="34" MaxLines="1" Text="Sourabh Agarwal"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestorAlias" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" Width="415" Height="35" MaxLines="1" Text="sourabha@microsoft.com"/>
        </Border>
        
        <Border Grid.Row="12" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <DatePicker x:Name="dpActionDate" HorizontalAlignment="Left" Margin="0" IsEnabled="False" VerticalAlignment="Top" Width="405" Height="35"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestDate" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0" Width="410" Height="34" MaxLines="1" Text=""/>
        </Border>
        <Border Grid.Row="4" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtRequestCriticality" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0" Width="410" Height="34" MaxLines="1" Text=""/>
