            <Label Content="Copyrights - SQLuninterrupted.com  -2015&#xA;"  VerticalAlignment="Bottom" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="162,-5,5,-5" FontStyle="Italic" Height="29"/>
