        <Border Grid.Row="1" BorderThickness="5" BorderBrush="#FFF9F2F2" >
            <Label Content="Service Requestor Name " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False" />
        </Border>
        <Border Grid.Row="2" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Service Requestor Alias " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="3" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Service Request Date " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="4" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Service Request Criticality " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False" Margin="0,0,0,-5"/>
        </Border>
        <Border Grid.Row="5" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Primary Product Name " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False" Margin="0,0,0,-5" Height="29" VerticalAlignment="Bottom"/>
        </Border>
        <Border Grid.Row="6" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Service Category " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False" Margin="0,0,0,-5"/>
        </Border>
        <Border Grid.Row="7" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Assigned To " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="8" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Service Description " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="9" Grid.Column="0" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Attachments " FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="9" Grid.Column="1" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <TextBox x:Name="txtAttachments" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0" Width="410" MaxLines="1"/>
        </Border>
        <Border Grid.Row="10" BorderThickness="5" Grid.ColumnSpan="2" BorderBrush="#FFF9F2F2"/>
        <Border Grid.Row="11" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="ACTION DETAILS" HorizontalAlignment="Left" Margin="0,-5,-418,-5" Width="615" FontWeight="Bold" FontSize="16" Background="#FFF5ECEC" BorderThickness="1" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" IsEnabled="False"/>
        </Border>
        <Border Grid.Row="12" BorderThickness="5" BorderBrush="#FFF9F2F2">
            <Label Content="Action Date" FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="13" IsEnabled="False"/>
